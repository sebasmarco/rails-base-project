<div class="row">
  <div class="section first-section description">
    <div class="section-summary col-xs-12 col-md-3">
      <h1>Personal Information</h1>
      <p>Changer your name and email address.</p>
    </div><!-- col-sm-3 -->
    
    <div class="section-content col-xs-12 col-md-9">
      <div class="row">
        <div class="form-group col-xs-12 col-md-12">
          <%= f.label :name, 'Name*' %>
          <%= f.text_field :name, class: "form-control" %>
        </div><!-- form-group -->
        
        <div class="form-group col-xs-12 col-md-12">
          <%= f.label :email, 'Email*' %>
          <%= f.email_field :email, class: "form-control" %>
        </div><!-- form-group -->
      </div><!-- row -->
    </div><!-- section-content -->
  </div><!-- section -->
  
  <div class="section-separator"></div>
  
  <div class="section">
    <div class="section-summary col-xs-12 col-md-3">
      <h1>Profile Image</h1>
      <p>Select an image for your profile.</p>
    </div><!-- col-sm-3 -->
    
    <div class="section-content col-xs-12 col-md-9">
      <div class="row">   
        <% if @administrator && @administrator.avatar.exists? %>
          <div class="form-group col-xs-12">
            <%= f.label :thumbnail, "Current" %>
            <%= link_to "#", class: "thumbnail", style: "width:100px;height:auto;" do %>
              <%= image_tag @administrator.avatar.url(:small) %>
            <% end %>
          </div>
        <% end %>
        <div class="form-group col-xs-12 col-sm-12">
          <%= f.label :avatar, 'Profile Image' %>
          <%= f.file_field :avatar, class: "form-control" %>
        </div><!-- form-group -->
      </div><!-- row -->
    </div><!-- section-content -->
  </div><!-- section -->   
  
  <div class="section-separator"></div> 
  
  <div class="section">
    <div class="section-summary col-xs-12 col-md-3">
      <h1>Account Details</h1>
      <p>Change your password.</p>
    </div><!-- col-sm-3 -->
    
    <div class="section-content col-xs-12 col-md-9">
      <div class="row">      
        <div class="form-group col-xs-12 col-md-12">
          <%= f.label :password, 'Password' %>
          <%= f.password_field :password, class: "form-control" %>
        </div><!-- form-group -->
        
        <div class="form-group col-xs-12 col-md-12">
          <%= f.label :password_confirmation, 'Repeat Password' %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div><!-- form-group -->
      </div><!-- row -->
    </div><!-- section-content -->
  </div><!-- section -->
</div><!-- row -->